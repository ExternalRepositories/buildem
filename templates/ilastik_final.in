#!/bin/bash
SCRIPTPATH=$( cd $(dirname $0) ; pwd -P )
export BUILDEM_DIR=$SCRIPTPATH #/..

export BUILDEM_LD_LIBRARY_VAR=$@BUILDEM_LD_LIBRARY_VAR@
export ILASTIK_PATH=$BUILDEM_DIR/src

export PYTHON_PREFIX=$BUILDEM_DIR

export $BUILDEM_LD_LIBRARY_VAR=$BUILDEM_DIR/lib:$@BUILDEM_LD_LIBRARY_VAR@
export $BUILDEM_LD_LIBRARY_VAR=$BUILDEM_DIR/lib/vtk-5.10:$@BUILDEM_LD_LIBRARY_VAR@
export $BUILDEM_LD_LIBRARY_VAR=$PYTHON_PREFIX/lib/python2.7/site-packages:$@BUILDEM_LD_LIBRARY_VAR@
export $BUILDEM_LD_LIBRARY_VAR=$PYTHON_PREFIX/lib/python2.7/site-packages/vigra:$@BUILDEM_LD_LIBRARY_VAR@

export PYTHONPATH=$PYTHON_PREFIX/lib/python2.7/site-packages:$PYTHONPATH
export PYTHONPATH=$ILASTIK_PATH/ilastik-HEAD/:$PYTHONPATH
export PYTHONPATH=$ILASTIK_PATH/volumina-HEAD/:$PYTHONPATH
export PYTHONPATH=$ILASTIK_PATH/lazyflow-HEAD/:$PYTHONPATH
export PYTHONPATH=$ILASTIK_PATH/lazyflow-HEAD/lazyflow/drtile:$PYTHONPATH

export PATH=$PYTHON_PREFIX/bin:$PATH
export PATH=$BUILDEM_DIR/bin:$PATH

$BUILDEM_DIR/bin/python2.7 $BUILDEM_DIR/src/ilastik-HEAD/ilastik/workflows/pixelClassification/pixelClassificationWorkflowMainGui.py "$@"
